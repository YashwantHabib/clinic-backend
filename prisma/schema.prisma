generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(PATIENT)
  createdAt    DateTime @default(now())
  bookings     Booking[]
}

model Slot {
  id        Int      @id @default(autoincrement())
  startAt   DateTime
  endAt     DateTime
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Booking {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  slot      Slot     @relation(fields: [slotId], references: [id])
  slotId    Int      @unique
  createdAt DateTime @default(now())
}

enum Role {
  PATIENT
  ADMIN
}